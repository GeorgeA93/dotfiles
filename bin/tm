#!/bin/sh

[ "$TMUX" == "" ] || exit 0

PS3="Please choose: "
options=($(tmux list-sessions -F "#S" 2>/dev/null) "Work" "Home" "zsh")
echo "Available"
echo "------------"
echo " "
select opt in "${options[@]}"
do
  case $opt in
      "Work")
        session="😎 "
        tmux new-session -d -s $session
        tmux new-window -t $session:0 -n "PS 💸"
        tmux selectp -t 1
        tmux send-keys "cd ~/Dev/payments-service && vim ." C-m
        tmux splitw -v -p 35
        tmux send-keys "cd ~/Dev/payments-service" C-m
        tmux new-window -t $session:1 -n "BO 🏦"
        tmux attach-session -t $session 
        break
        ;;
      "Home")
        echo "Get a job"
        break
        ;;
      "zsh")
        zsh --login
        break
        ;;
      *)
        tmux attach-session -t $opt
        break
        ;;
  esac
done
